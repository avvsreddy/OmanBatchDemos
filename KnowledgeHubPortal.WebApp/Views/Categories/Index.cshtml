@model List<KnowledgeHubPortal.Domain.Entities.Category>
    <script src="https://unpkg.com/htmx.org@1.9.4"></script>
<h2>Categories List</h2>
<hr />

<div class="alert alert-warning alert-dismissible fade show" role="alert">
    <strong>@TempData["Msg"]</strong> 
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>


<table class="table table-bordered">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Delete</td>
        <td>Edit</td>
    </tr>

    @{
        var id = 0;
        var name = "";
    }

    @foreach (var item in Model)
    {

        id = item.CategoryId;
        name = item.Name;
        
        <tr>
            <div hx-target="this" hx-swap="outerHTML">
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @*<a asp-action="ConfirmDelete" asp-route-id="@item.CategoryId" class="btn btn-danger"
                    data-bs-toggle="modal" data-bs-target="#exampleModal">
                Delete
            </a>*@

                <!--asp helper tags-->
                @*@Html.Partial("_DeleteConfirm",
            new ConfirmDeleteViewModel { DeleteItemID = id, DeleteItemName = name })*@

                <a asp-action="ConfirmDelete"
                   asp-route-id="@item.CategoryId"
                   class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>


                @*<a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-primary">Edit</a>*@
                <button hx-get="/Categories/Edit/@item.CategoryId" class="btn btn-primary">
                    Click To Inline Edit
                </button>
            </td> 
            </div>
        </tr>
       

            }
    </table>





